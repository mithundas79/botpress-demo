{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "lib": ["es7"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "."
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*"]
}
